{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}

{% block body %}


<div class="container">
    <h1>Avis</h1>

    <div class="row">
        {% for avi in avisListe %}
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ avi.author }}</h5>
                        <p class="card-text">{{ avi.content }}</p>
                        <p class="card-text"><p>{{avi.status}}</p>
                        <p class="card-text"><small class="text-muted">{{ avi.date ? avi.date|date('Y-m-d') : '' }}</small></p>
                        
                        {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_avis_show', {'id': avi.id}) }}" class="btn btn-primary">Show</a>
                        <a href="{{ path('app_avis_edit', {'id': avi.id}) }}" class="btn btn-secondary">Edit</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-md-12">
                <p>No records found</p>
            </div>
        {% endfor %}
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <a href="{{ path('app_avis_new') }}" class="btn btn-success">Create new</a>
        </div>
    </div>
</div>

       


{% endblock %}
