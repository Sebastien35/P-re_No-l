{% extends 'base.html.twig' %}

{% block title %}Hello AvisController!{% endblock %}

{% block body %}
    <h1>Liste des Avis</h1>
    <div class="col-md-12">
            <a href="{{ path('app_avis_new') }}" class="btn btn-success">Donner mon avis</a>
        </div>
    <div class="row mt-3">
       {% for avis in avisList %}
            {% if avis.status == 1 %}
                <div class="col-md-3 mb-4">
                <div class="card">
                <div class="card-title">{{avis.author}}</div>
                <div class="card-text">{{avis.content}}</div>
                </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>

    
        
{% endblock %}
